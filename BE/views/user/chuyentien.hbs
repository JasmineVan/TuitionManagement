
    <div class="container app-containter">
        {{#if account_cxm}}
        {{> headers/headerUserTemp}}
        {{/if}}
        {{#if account_dxm}}
        {{> headers/headerUser}}
        {{/if}}
        <section class="banking">
            <form class="banking-form" action="" method="POST">
                <div class="form-group">
                    <label for="" class="form-label">Số điện thoại người nhận</label>
                    <input type="text" class="form-input" placeholder="Phone number" name="phone_transfer" id="phone_transfer">
                </div>
                <div class="form-group">
                    <label for="" class="form-label">Số tiền</label>
                    <input type="number" class="form-input" placeholder="Money" name="money_transfer" id="money_transfer">
                </div>
                <div class="form-group">
                    <label for="" class="form-label">Tên người nhận</label>
                    <input readonly type="text" class="form-input" placeholder="Name" name="name_transfer" id="name_transfer">
                </div>
                <div class="form-group">
                    <label class="form-label">Note</label>
                    <input name="note_transfer" class="form-input" type="text" placeholder="Note" id="note_transfer">
                </div>
                <div class="form-group">
                    <label class="form-label">Phí chuyển tiền</label>
                    <select name="fee_transfer" class="form-input" id="fee_transfer">
                        <option value="sender">Bạn chịu</option>
                        <option value="receiver">Người nhận chịu</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="" class="form-label">Mã OTP</label>
                    <div class="">
                        <input type="text" class="" placeholder="OTP code" name="otp_transfer" id="otp_transfer">
                        <button type="button" id="btn_sendotp" class="btn btn-outline-success">Send OTP</button>
                    </div>
                </div>
                <button class="btn-pri" id="btn_transfer">Xác nhận</button>
            </form>
        </section>

    </div>
    
