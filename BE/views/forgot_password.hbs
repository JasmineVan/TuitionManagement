<div class="login">
    <div class="login-container">
        <form action="/forgot_password" method="POST" class="forgot_password">
            <h1 class="login-heading">Forgot password</h1>
            <div class="form-group">
                <label for="" class="form-label">Email</label>
                <input type="text" class="form-input" placeholder="Enter your username..." name="email_forgot" id="email_forgot">
            </div>
            <div class="form-group">
                <label for="" class="form-label">Phone number</label>
                <input type="text" class="form-input" placeholder="Enter your password..." name="phone_forgot" id="phone_forgot">
            </div>
            <div class="form-group">
                <label class="form-label">OTP</label>
                <div class="">
                    <input required name="otp_code" class="" type="text" placeholder="Your OTP Code" />
                    <button type="button" id="btn_sendotp" class="btn btn-outline-success">Send OTP</button>
                </div>
            </div>
            <button class="btn-pri" id="btn_confirm_otp">
                Confirm
            </button>
        </form>
    </div>
</div>
